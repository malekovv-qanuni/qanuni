{
  "name": "qanuni",
  "version": "1.0.0",
  "description": "Qanuni - Legal ERP System for Law Firms",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "electron": "electron .",
    "dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "api": "nodemon server/api-server.js",
    "dev:web": "concurrently \"npm run api\" \"npm run dev\"",
    "dist": "react-scripts build && electron-builder",
    "dist:clean": "react-scripts build && electron-builder --dir",
    "dist:win": "react-scripts build && electron-builder --win"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "date-fns": "^3.3.1",
    "electron-is-dev": "^2.0.0",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "lucide-react": "^0.330.0",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "sql.js": "^1.10.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^26.7.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "author": "Malek Kallas",
  "build": {
    "appId": "com.qanuni.app",
    "productName": "Qanuni",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "electron/**/*",
      "licensing/license-manager.js",
      "node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}

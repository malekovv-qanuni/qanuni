# Qanuni SaaS - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to git (already in .gitignore)

# ============================================
# DATABASE (SQL Server)
# ============================================

# Server hostname (Azure SQL, local SQL Express, etc.)
DB_SERVER=localhost

# Database name
DB_DATABASE=qanuni_saas

# SQL Auth credentials (leave BOTH empty for Windows Auth on local dev)
DB_USER=
DB_PASSWORD=

# Connection security
DB_ENCRYPT=false
DB_TRUST_SERVER_CERTIFICATE=true

# ============================================
# AUTHENTICATION (JWT)
# ============================================

# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=CHANGE_ME_generate_64_char_random_string
JWT_REFRESH_SECRET=CHANGE_ME_generate_different_64_char_random_string

# Token lifetimes
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# ============================================
# SERVER
# ============================================

PORT=3001
NODE_ENV=development

# CORS â€” comma-separated allowed origins (default: localhost:3000,3001)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# FRONTEND (React build-time variables)
# ============================================

# API URL for web builds (must start with REACT_APP_)
REACT_APP_API_URL=http://localhost:3001/api
REACT_APP_MODE=saas

